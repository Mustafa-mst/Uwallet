<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f3f6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.loginStuff.CreateUserFragment">
<ProgressBar
    android:id="@+id/progress"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_above="@+id/cardView"
    android:layout_centerHorizontal="true"
    android:visibility="gone"

    ></ProgressBar>

<androidx.cardview.widget.CardView
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_centerInParent="true"
    android:layout_marginTop="30dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    app:cardElevation="10dp"
    android:layout_marginBottom="30dp"
    android:padding="20dp"
    app:cardCornerRadius="20dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/toolbarCreate"
        >

        <TextView
            android:id="@+id/titleTextCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/inter_medium"
            android:text="Kayıt Ol"
            android:textColor="#000000"
            android:textSize="48sp"></TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/usernameEditCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTextCreate"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="Kullanıcı Adı"
            android:textColor="@color/black"
            android:textColorHint="#377eff"
            app:boxStrokeColor="#377EFF"
            app:counterEnabled="false"
            app:endIconMode="clear_text"
            app:passwordToggleEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailEditCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usernameEditCreate"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:hint="Email"
            android:textColor="@color/black"
            android:textColorHint="#377eff"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordEditCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailEditCreate"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:hint="Şifre"
            android:textColor="@color/black"
            android:textColorHint="#377eff"
            app:counterEnabled="true"
            app:counterMaxLength="6"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number|numberDecimal"
                android:password="true" />
        </com.google.android.material.textfield.TextInputLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/passwordEditCreate"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:textAllCaps="false"
            android:background="#377eff"
            android:fontFamily="@font/inter_medium"
            android:onClick="register"
            android:text="Kayıt ol"
            android:textColor="@color/white"></androidx.appcompat.widget.AppCompatButton>
    </RelativeLayout>

</androidx.cardview.widget.CardView>



</RelativeLayout>