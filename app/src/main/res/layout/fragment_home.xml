<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#eefcf8"
    tools:context=".view.mainScreen.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/u"
                    android:layout_toLeftOf="@+id/titleU"
                    ></ImageView>
                <TextView
                    android:id="@+id/titleU"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="wallet"
                    android:layout_gravity="center"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp"
                    ></TextView>
            </LinearLayout>

            <ImageView
                android:id="@+id/exitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_exit_to_app_24"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                ></ImageView>

        </RelativeLayout>


        <TextView
            android:id="@+id/greetingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoşgeldin"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="8dp"
            android:textSize="34sp" />
        <TextView
            android:id="@+id/warningText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Gider Girmeden Önce Varlık Girmelisin"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/holo_red_light"></TextView>

    <androidx.cardview.widget.CardView
        android:id="@+id/mainCardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="8dp"
            >

            <TextView
                android:id="@+id/savingsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/netWorth"
                android:layout_alignStart="@+id/netWorth"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/inter_medium"
                android:text="0 ₺"
                android:textColor="@color/black"
                android:textSize="34sp"
                 />
            <TextView
                android:id="@+id/expensesTotalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-0 ₺"
                android:textColor="@android:color/holo_red_dark"
                android:layout_below="@id/savingsText"
                android:layout_alignEnd="@id/savingsText"
                android:textSize="18sp"></TextView>
            <TextView
                android:id="@+id/remainingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/expensesTotalText"
                android:textSize="14sp"
                android:text="0"
                android:layout_alignEnd="@id/expensesTotalText"></TextView>


            <TextView
                android:id="@+id/netWorth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/quicksand_medium"
                android:text="Varlıklarım"
                android:textColor="#00AE4D"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>
            <ImageView
                android:id="@+id/changeSaving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_edit_24"
                android:layout_toRightOf="@+id/savingsText"
                android:layout_alignTop="@+id/savingsText"
                app:tint="#16a085"></ImageView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gummy_wallet"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="50dp"
                    android:scaleType="centerCrop"></ImageView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
        <ProgressBar
            android:id="@+id/fragmentProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"></ProgressBar>
        <TextView
            android:id="@+id/regularExtenseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:text="Sabit Giderler"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"></TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/secondpayment"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        app:cardElevation="10sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/changeRegularExes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/baseline_edit_24"
                    app:tint="#16a085"
                    ></ImageView>
            </RelativeLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Kira Giderleri"
                android:fontFamily="@font/inter_medium"
                android:textColor="#979daa"></TextView>
            <TextView
                android:id="@+id/rentPaymentText"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 ₺"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/inter_medium"
                android:textColor="#545d72"></TextView>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Taksitler"
                android:fontFamily="@font/inter_medium"
                android:textColor="#979daa"></TextView>
            <TextView
                android:id="@+id/installmentsText"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="0 ₺"
                android:textStyle="bold"
                android:textSize="18sp"
                android:fontFamily="@font/inter_medium"
                android:textColor="#545d72"></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/monthlyExes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aylık Giderler"

                android:textStyle="bold"
                android:fontFamily="@font/quicksand_medium"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                ></TextView>
            <ImageView
                android:id="@+id/addExpenses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                android:src="@drawable/baseline_add_circle_24"
                app:tint="#16a085"></ImageView>
        </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerCard"
        app:cardElevation="10dp"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        app:cardCornerRadius="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mainRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/inter_medium"
            ></androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



    </LinearLayout>





</ScrollView>