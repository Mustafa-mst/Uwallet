<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"

    >
    <Spinner
        android:id="@+id/spinnerCustom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">
    </Spinner>
    <EditText
        android:id="@+id/infoForExpenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/spinnerCustom"
        android:hint="Lütfen Harcama Açıklaması Giriniz"
        ></EditText>

    <EditText
        android:id="@+id/valueForExpenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoForExpenses"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="25dp"
        android:hint="Lütfen Harcama Miktarını Giriniz"
        android:inputType="numberDecimal"
        android:padding="15dp"></EditText>



</RelativeLayout>